{
  "name": "@reason-react-native/__template__",
  "version": "0.0.0",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {},
  "repository": "https://github.com/reason-react-native/__template__.git",
  "license": "MIT",
  "keywords": [
    "reason",
    "reasonml",
    "bucklescript",
    "react-native"
  ],
  "files": [
    "*",
    "!.DS_Store",
    "!**/*.bs.js",
    "!.merlin",
    "!lib/bs",
    "!lib/ocaml"
  ],
  "scripts": {
    "format:most": "prettier --write \"**/*.{md,json,js,css}\"",
    "format:re": "find . -name \"*.re\" -or -name \"*.rei\" | grep -v \"node_modules\" | xargs bsrefmt --in-place",
    "format": "yarn format:most && yarn format:re",
    "re:start": "bsb -make-world -w",
    "re:build": "bsb -make-world",
    "re:clean-build": "bsb -clean-world -make-world",
    "start": "yarn re:start",
    "build": "yarn re:build",
    "test": "yarn re:clean-build",
    "release": "npmpub"
  },
  "devDependencies": {
    "bs-platform": "^7.0.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "npmpub": "^5.0.0",
    "prettier": "^1.19.1"
  },
  "prettier": {
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.{md,json,js,css}": [
      "prettier --write",
      "git add"
    ],
    "*.{re,rei}": [
      "bsrefmt --in-place",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
